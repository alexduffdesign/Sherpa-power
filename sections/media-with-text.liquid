<style>
  #shopify-section-{{ section.id }} {
    --media-with-text-gap: {% if section.settings.spacing == 'none' %}0{% else %}var(--grid-gutter){% endif %};
  --media-with-text-item-grid-template: "media" "content" / auto;
}

@media screen and (min-width: 1000px) {
  #shopify-section-{{ section.id }} {
    --media-with-text-gap: {% if section.settings.spacing == 'none' %}0{% elsif section.settings.spacing == 'small' %}var(--spacing-6){% elsif section.settings.spacing == 'medium' %}var(--spacing-12){% else %}var(--spacing-18){% endif %};
}
}

/* Ensure buttons inside content adopt heading typography */
#shopify-section-{{ section.id }} .media-with-text__content .button {
  font-family: var(--heading-font-family);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  letter-spacing: var(--heading-letter-spacing);
  text-transform: var(--heading-text-transform);
}

/* Rive overlay inside media */
#shopify-section-{{ section.id }} .media-with-text__media {
  position: relative;
  overflow: hidden;
}

#shopify-section-{{ section.id }} .rive-overlay {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
  z-index: 1;
}

#shopify-section-{{ section.id }} .rive-overlay rive-media {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: block;
}

@media (prefers-reduced-motion: reduce) {
  #shopify-section-{{ section.id }} .rive-overlay rive-media[playing] {
    animation: none;
  }
}

{%- for block in section.blocks -%}
  {%- assign media_ratio = block.settings.media_width | divided_by: 50.0 -%}
  {%- assign content_ratio = 2.0 | minus: media_ratio -%}

  #block-{{ section.id }}
  -{{ block.id }} {
    --media-with-text-item-icon-width: {{ block.settings.icon_width }}px;
  }

  @media screen and (min-width: 1000px) {
    #block-{{ section.id }}-{{ block.id }} {
      --media-with-text-item-grid-template: {% if block.settings.media_position == 'start' %}"media content" / minmax(0, {{ media_ratio }}fr) minmax(0, {{ content_ratio }}fr){% else %}"content media" / minmax(0, {{ content_ratio }}fr) minmax(0, {{ media_ratio }}fr){% endif %};
}
}

{%- if block.settings.content_background_image != blank -%}
  #block-{{ section.id }}
  -{{ block.id }}
  .media-with-text__content {
    position: relative;
    overflow: hidden;
  }

  #block-{{ section.id }}
  -{{ block.id }}
  .media-with-text__content::before {
    mix-blend-mode: soft-light;
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background-image: url('{{ block.settings.content_background_image | image_url: width: block.settings.content_background_image.width }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: {{ block.settings.content_background_opacity | default: 40 | divided_by: 100.0 }};
    z-index: 0;
    pointer-events: none;
  }

  #block-{{ section.id }}
  -{{ block.id }}
  .media-with-text__content > * {
    position: relative;
    z-index: 1;
  }
{%- endif -%}
{%- endfor -%}
