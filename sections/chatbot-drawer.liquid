              gradientUnits="userSpaceOnUse">
              <stop stop-color="white" />
              <stop offset="1" stop-color="#DB9BFB" />
            </linearGradient>
          </defs>
        </svg>
      </div>
      <button class="button back-to-start">
        <svg width="12" height="14" viewBox="0 0 12 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 13.75V4.75L6 0.25L12 4.75V13.75H7.5V8.5H4.5V13.75H0Z" fill="white"/>
        </svg>
        Menu
      </button>
    </div>
  

       <main-chatbot api-endpoint="https://chatbottings--development.gadget.app/voiceflow" class="main-chatbot" >
        {% render 'chatbot-template' %}
         <footer class="footer-form">
           {{ form }}
         </footer>
      </main-chatbot>
  </x-drawer>


  {% render 'vite-tag' with 'chatbot-drawer.js' %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof initChatbotDrawer === 'function') {
        initChatbotDrawer('{{ drawer_id }}');
      } else {
        console.error('initChatbotDrawer function not found');
      }
    });
  </script>


