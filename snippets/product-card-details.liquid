<div class="power-rating-container">
  <style>
    .power-rating-container {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      flex-direction: column;
      grid-gap: var(--spacing-3);
      margin-top: var(--spacing-2);
    }

    .power-rating {
      display: flex;
      align-items: center;
      flex-direction: row;
    }

    .power-rating img {
      width: 2.2rem;
      /* Adjust as necessary */
      height: auto;
      margin-right: 0.5rem;
      /* Space between icon and text */
    }

    .power-rating span {
      color: inherit;
      /* Adjust to match your theme */
    }

    .info-title {
      font-family: var(--heading-font-family);
    }

    @media screen and (max-width: 767px) {
      .power-rating img {
        width: 2em;
        height: auto;
      }
      .power-rating-container {
        grid-gap: 0.5rem;
      }
    }
  </style>

  {%- assign key_features = product.metafields.custom.key_features.value -%}

  {% comment %}
    THESE ARE FOR PORTABLE POWER STATIONS
  {% endcomment %}

  <!-- Replace 'namespace' and 'key' with actual metafield namespace and key -->
  {% unless product.metafields.custom.capacity == blank or product.metafields.custom.capacity == '-' %}
    <div class="power-rating">
      <img
        src="https://cdn.shopify.com/s/files/1/0641/4290/1439/files/Capacity.png?v=1714485042"
        width="38"
        height="46"
        alt="Power Icon">
      <!-- Replace with your actual icon URL -->
      <span class="info-title">Capacity: {{ product.metafields.custom.capacity.value }}</span>
    </div>
  {% endunless %}

  {% unless key_features.output_ac == blank or key_features.output_ac == '-' %}
    <div class="power-rating">
      <img
        src="https://cdn.shopify.com/s/files/1/0641/4290/1439/files/AC_Output.png?v=1714485042"
        width="38"
        height="46"
        alt="Power Icon">
      <span class="info-title">Output (AC): {{ key_features.output_ac.value }}</span>
    </div>
  {% endunless %}

  {% unless key_features.input_ac == blank or key_features.input_ac == '-' %}
    <div class="power-rating">
      <img
        src="https://cdn.shopify.com/s/files/1/0641/4290/1439/files/AC_Input.png?v=1714485042"
        width="38"
        height="46"
        alt="Power Icon">
      <span class="info-title">Input (AC): {{ key_features.input_ac.value }}</span>
    </div>
  {% endunless %}

  {% unless key_features.charge_time == blank or key_features.charge_time == '-' %}
    <div class="power-rating">
      <img
        src="https://cdn.shopify.com/s/files/1/0641/4290/1439/files/Charge_Time.png?v=1714485041"
        width="38"
        height="46"
        alt="Power Icon">
      <span class="info-title">Charge Time: {{ key_features.charge_time.value }}</span>
    </div>
  {% endunless %}</div>


{% comment %}
  THESE ARE FOR CHARGING APPLICATIONS AND SOLAR
{% endcomment %}

{%- assign key_features_cs = product.metafields.custom.key_features_cs.value -%}

{% if key_features_cs.output_power != blank %}
